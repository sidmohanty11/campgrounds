<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validateForm"
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input value="<%= campground.title %>" class="form-control" type="text" name="campground[title]"
                    id="title" placeholder="Title of the camp" required>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input value="<%= campground.location %>" class="form-control" type="text" name="campground[location]"
                    id="location" placeholder="Where's it at?" required>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Campground Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">&#8377;</span>
                    <input value="<%= campground.price %>" name="campground[price]" type="text" class="form-control"
                        placeholder="0.00" aria-label="price" required aria-describedby="price-label" />
                    <div class="valid-feedback">Looks Good</div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description"
                    placeholder="How was your experience?" required><%= campground.description %></textarea>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="mb-3">
                <input type="file" name="image" id="" multiple>
                <!-- <label class="form-label" for="image">Image Url</label>
                <input value="" class="form-control" type="text" name="campground[image]"
                    id="image" placeholder="Image URL" required>
                <div class="valid-feedback">Looks Good</div> -->
            </div>
            <button class="btn btn-success mb-3">Edit Camp</button>
        </form>
        <a href="/campgrounds">All campgrounds</a>