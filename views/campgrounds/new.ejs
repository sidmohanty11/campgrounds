<% layout('layouts/boilerplate') %>
<form action="/campgrounds" method="POST">
    <div>
        <label for="title">Title</label>
        <input type="text" name="campground[title]" id="title" placeholder="Title of the camp">
    </div>
    <div>
        <label for="location">Location</label>
        <input type="text" name="campground[location]" id="location" placeholder="Where's it at?">
    </div>
    <button>Add Camp</button>
</form>